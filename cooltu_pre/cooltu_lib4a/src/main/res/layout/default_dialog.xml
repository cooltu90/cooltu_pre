<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/bg_dialog">

    <TextView
        android:id="@id/dialogTitleTv"
        style="@style/dialog_sub_title"
        android:text="提示" />

    <TextView
        android:id="@id/dialogContentTv"
        style="@style/dialog_title"
        android:text="是否删除？" />

    <View style="@style/dialog_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@id/dialogLeftBt"
            style="@style/dialog_bt"
            android:text="取消" />

        <View style="@style/dialog_divider_h" />

        <TextView
            android:id="@id/dialogRightBt"
            style="@style/dialog_bt"
            android:text="确定" />

    </LinearLayout>

</LinearLayout>