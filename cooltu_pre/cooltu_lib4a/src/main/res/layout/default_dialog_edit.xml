<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/bg_dialog">

    <TextView
        android:id="@id/editDialogTitleTv"
        style="@style/dialog_title"
        android:text="请输入一个任务名" />

    <EditText
        android:id="@id/editDialogTitleEt"
        style="@style/dialog_et" />

    <View style="@style/dialog_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/editDialogNoBt"
            style="@style/dialog_bt"
            android:text="取消" />

        <View style="@style/dialog_divider_h" />

        <TextView
            android:id="@id/editDialogYesBt"
            style="@style/dialog_bt"
            android:text="确定" />

    </LinearLayout>

</LinearLayout>