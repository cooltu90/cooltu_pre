<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Theme -->
    <!--    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">-->
    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorAccent">#FFFFFF</item>
    </style>

    <style name="AppTheme.Main" parent="AppThemeNoActionBar" />


    <style name="bg_dialog">
        <item name="android:layout_width">@dimen/dialog_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_default_dialog_layer</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="dialog_title">
        <item name="android:layout_width">@dimen/dialog_width</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">@dimen/dialog_title_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dialog_et">
        <item name="android:layout_width">270dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:background">@drawable/bg_default_dialog_box</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textColor">#ff333333</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="dialog_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">13dp</item>
        <item name="android:background">#DDDDDD</item>
    </style>


    <style name="dialog_bt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#007AFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dialog_divider_h">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">#DDDDDD</item>
    </style>

    <style name="dialog_sub_title">
        <item name="android:layout_width">@dimen/dialog_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>